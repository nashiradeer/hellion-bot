    "configurations": [
        {
            "name": "Launch Test",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "HELLION_LOCALES": "${workspaceFolder}/locales",
                "HELLION_DEBUG": "on",
